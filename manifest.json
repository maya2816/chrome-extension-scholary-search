{
  "manifest_version": 3,
  "name": "Scholarly Search",
  "version": "1.0",
  "description": "Search Semantic Scholar and summarize with OpenAI.",
  "offline_enabled": true,
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.semanticscholar.org/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/panel.js",
        "images/*.png",
        "images/*.gif"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}

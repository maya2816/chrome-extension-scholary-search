{
    "manifest_version": 3,
    "name": "Scholarly Search",
    "version": "1.0",
    "description": "Search Semantic Scholar and summarize with OpenAI.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "https://api.semanticscholar.org/*",
      "https://api.openai.com/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  
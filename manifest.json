{
  "manifest_version": 3,
  "name": "ScholarSearch",
  "description": "Search and rank academic papers from a sidebar.",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "public/images/icon16.png",
      "32": "public/images/icon32.png",
      "48": "public/images/icon48.png",
      "128": "public/images/icon128.png"
    }
  },
  "icons": {
    "16": "public/images/icon16.png",
    "32": "public/images/icon32.png",
    "48": "public/images/icon48.png",
    "128": "public/images/icon128.png"
  },
  "side_panel": {
    "default_path": "public/index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}